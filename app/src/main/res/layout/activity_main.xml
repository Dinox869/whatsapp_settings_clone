<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAccent"
    >
    <RelativeLayout
        android:id = "@+id/layer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id = "@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/biker"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="4dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#3f51b5"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/avatar"
            android:gravity="center"
            android:text="Dennis"
            android:textColor="@color/textcolor"
            android:textSize="20dp"
            android:textStyle="normal"></TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_below = "@+id/name"
            android:layout_toRightOf="@+id/avatar"
            android:id="@+id/status"
            android:textStyle="normal"
            android:textColor="@color/textcolor2"
            android:textSize="14dp"
            android:text="Thoughts attract that ...">
        </TextView>
        <ImageButton
            android:id="@+id/Button01"
            android:scaleType="fitXY"
            android:layout_marginTop="28dp"
            android:layout_width="30dp"
            android:layout_alignParentEnd="true"
            android:layout_height="30dp"
            android:cropToPadding="false"
            android:paddingLeft="10dp"
            android:background="@drawable/scan"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <View
        android:layout_marginTop="9dp"
        android:layout_below = "@+id/layer1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/views"
        android:id = "@+id/view"
        />
    <RelativeLayout
        android:layout_below = "@+id/view"
        android:id = "@+id/layer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_vpn_key_24"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/key"
            >
        </ImageButton>
        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key"
            android:gravity="center"
            android:text="Account"
            android:textColor="@color/textcolor"
            android:textSize="16dp"
            android:textStyle="normal"></TextView>
        <TextView
            android:id="@+id/account_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key"
            android:gravity="center"
            android:text="Privacy, security, change number"
            android:layout_below = "@+id/account"
            android:textColor="@color/textcolor2"
            android:textSize="14dp"
            android:textStyle="normal"></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_below = "@+id/layer2"
        android:id = "@+id/layer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chat_24"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/key2"
            >
        </ImageButton>
        <TextView
            android:id="@+id/chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key2"
            android:gravity="center"
            android:text="Chats"
            android:textColor="@color/textcolor"
            android:textSize="16dp"
            android:textStyle="normal"></TextView>
        <TextView
            android:id="@+id/chats_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key2"
            android:gravity="center"
            android:text="Theme, wallpapers, chat histrou"
            android:layout_below = "@+id/chats"
            android:textColor="@color/textcolor2"
            android:textSize="14dp"
            android:textStyle="normal"></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_below = "@+id/layer3"
        android:id = "@+id/layer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_notifications_24"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/key3"
            >
        </ImageButton>
        <TextView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key3"
            android:gravity="center"
            android:text="Notifications"
            android:textColor="@color/textcolor"
            android:textSize="16dp"
            android:textStyle="normal"></TextView>
        <TextView
            android:id="@+id/notifications_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key3"
            android:gravity="center"
            android:text="Message, group &amp; call tones"
            android:layout_below = "@+id/notifications"
            android:textColor="@color/textcolor2"
            android:textSize="14dp"
            android:textStyle="normal"></TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below = "@+id/layer4"
        android:id = "@+id/layer5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_radio_button_unchecked_24"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/key4"
            >
        </ImageButton>
        <TextView
            android:id="@+id/storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key4"
            android:gravity="center"
            android:text="Storage and data"
            android:textColor="@color/textcolor"
            android:textSize="16dp"
            android:textStyle="normal"></TextView>
        <TextView
            android:id="@+id/storage_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key4"
            android:gravity="center"
            android:text="Theme, wallpapers, chat histrou"
            android:layout_below = "@+id/storage"
            android:textColor="@color/textcolor2"
            android:textSize="14dp"
            android:textStyle="normal"></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_below = "@+id/layer5"
        android:id = "@+id/layer6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_help_outline_24"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/key7"
            >
        </ImageButton>
        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key7"
            android:gravity="center"
            android:text="Help"
            android:textColor="@color/textcolor"
            android:textSize="16dp"
            android:textStyle="normal"></TextView>
        <TextView
            android:id="@+id/help_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/key7"
            android:gravity="center"
            android:text="Help center, contact us, privacy policy"
            android:layout_below = "@+id/help"
            android:textColor="@color/textcolor2"
            android:textSize="14dp"
            android:textStyle="normal"></TextView>


    </RelativeLayout>
    <View
        android:layout_marginTop="27dp"
        android:layout_marginLeft="72dp"
        android:layout_below = "@+id/layer6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/views"
        android:id = "@+id/view2"
        />
    <RelativeLayout
        android:layout_below = "@+id/view2"
        android:id = "@+id/layer7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_people_24"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/key8"
            >
        </ImageButton>
        <TextView
            android:id="@+id/invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/key8"
            android:gravity="center"
            android:text="Invite a friend"
            android:textColor="@color/textcolor"
            android:textSize="16dp"
            android:textStyle="normal"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below = "@+id/layer7"
        android:id = "@+id/layer8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <TextView
            android:id = "@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal = "true"
            android:text = "from"
            android:textSize="13dp"
            android:textColor="@color/textcolor"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            ></TextView>
        <TextView
            android:layout_below = "@+id/from"
            android:id = "@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal = "true"
            android:text = "FACEBOOK"
            android:textSize="15dp"
            android:textColor="@color/textcolor"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:textStyle="bold"
            ></TextView>
    </RelativeLayout>

</RelativeLayout>